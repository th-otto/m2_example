DEFINITION MODULE Strings;

IMPORT SYSTEM;

CONST MaxChars = 80;

TYPE String = ARRAY [0..MaxChars] OF CHAR;

TYPE CompareResults = (Greater, Equal, Less);

(* 1 *) PROCEDURE InitStringModule();

(* 2 *) PROCEDURE Assign(VAR Dest: ARRAY OF CHAR; VAR Source: ARRAY OF CHAR);

(* 3 *) PROCEDURE Insert(VAR SubStr: ARRAY OF CHAR; VAR Str: ARRAY OF CHAR; Index: CARDINAL);

(* 4 *) PROCEDURE Delete(VAR Str: ARRAY OF CHAR; Index: CARDINAL; Len: CARDINAL);

(* 5 *) PROCEDURE Copy(VAR Str: ARRAY OF CHAR; Index: CARDINAL; Len: CARDINAL; VAR Result: ARRAY OF CHAR);

(* 6 *) PROCEDURE Concat(VAR S1: ARRAY OF CHAR; VAR S2: ARRAY OF CHAR; VAR Result: ARRAY OF CHAR);

(* 7 *) PROCEDURE Length(VAR Str: ARRAY OF CHAR): CARDINAL;

(* 8 *) PROCEDURE Compare(VAR S1: ARRAY OF CHAR; VAR S2: ARRAY OF CHAR): CompareResults;

(* 9 *) PROCEDURE Pos(VAR Source: ARRAY OF CHAR; VAR Match: ARRAY OF CHAR; Start: CARDINAL; VAR Where: CARDINAL): BOOLEAN;

(* 10 *) PROCEDURE SetTerminator(Ch: CHAR);

(* 11 *) PROCEDURE GetTerminator(): CHAR;

END Strings.
